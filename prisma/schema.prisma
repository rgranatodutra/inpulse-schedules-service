generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Schedule {
  id             String    @id @default(uuid())
  clientName     String
  scheduleDate   DateTime
  scheduledAt    DateTime  @default(now())
  startedAt      DateTime?
  alreadyStarted Boolean?  @default(false)
  sectorId       Int
  whatsappId     Int
  toUserId       Int
  byUserId       Int
}

model Attendance {
  id         String         @id @default(uuid())
  clientName String
  type       AttendanceType
  whatsappId Int
  userId     Int
  avatarUrl  String
  startedAt  DateTime
  finishedAt DateTime?
}

enum AttendanceType {
  normal
  firstContact
  botRegistration
  contactResearch
  satisfactionResearch
}
